{
  "name": "prueba-almundo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "font": "gulp export-icon-fonts && gulp resource-copy && gulp build && react-native run-android",
    "postinstall": "rm ./node_modules/react-native/local-cli/core/__fixtures__/files/package.json",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "android": "npm run build && concurrently -r 'npm run watch' 'react-native run-android'",
    "ios": "npm run build && concurrently -r 'npm run watch' 'react-native run-ios'",
    "test": "jest --coverage",
    "tsc": "tsc --noLib",
    "clean": "rimraf lib",
    "build": "npm run clean && gulp resource-copy && npm run tsc --",
    "lint": "tslint src/**/*.ts",
    "watch": "npm run build -- -w",
    "check": "npm-dep -c --all",
    "clock": "adb shell \"date `date +%m%d%H%M%Y.%S`\"",
    "git-ignore": "git clean -df && git checkout -- ."
  },
  "rnpm": {
    "assets": [
      "./src/Assets/fonts/"
    ]
  },
  "dependencies": {
    "@ptomasroos/react-native-multi-slider": "0.0.12",
    "react": "16.3.1",
    "react-native": "0.55.1",
    "react-native-animatable": "^1.2.4",
    "react-native-dash": "0.0.8",
    "react-native-devsettings-android": "0.1.5",
    "react-native-i18n": "^2.0.12",
    "react-native-image-gallery": "^2.1.5",
    "react-native-linear-gradient": "^2.4.0",
    "react-native-orientation": "3.1.3",
    "react-native-router-flux": "^4.0.0-beta.28",
    "react-native-shadow": "^1.2.2",
    "react-native-svg": "^6.3.1",
    "react-native-vector-icons": "^4.6.0",
    "sugar": "2.0.4",
    "sugar-inflections": "2.0.4",
    "timezone": "1.0.13"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.44",
    "@types/jest": "^22.2.2",
    "@types/react-native": "^0.52.24",
    "babel-jest": "22.4.3",
    "babel-preset-react-native": "4.0.0",
    "concurrently": "^3.5.1",
    "gulp": "^3.9.1",
    "gulp-iconfont": "^9.1.0",
    "gulp-typescript": "^4.0.2",
    "jest": "22.4.3",
    "react-test-renderer": "16.3.1",
    "rimraf": "^2.6.2",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1",
    "vinyl-source-stream": "^2.0.0"
  },
  "jest": {
    "preset": "react-native",
    "testRegex": "lib/.+\\.(test|spec).js$",
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text-summary",
      "html"
    ],
    "collectCoverageFrom": [
      "lib/**/*.js",
      "!lib/**/*.spec.js",
      "!lib/**/*.index.js"
    ]
  }
}
